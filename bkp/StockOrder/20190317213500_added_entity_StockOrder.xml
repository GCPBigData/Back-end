<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity StockOrder.
    -->
    <changeSet id="20190317213500-1" author="joaopmafra">
        <createSequence sequenceName="stock_order_seq" startValue="1000" incrementBy="1"/>

        <createTable tableName="stock_order">
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="stock_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        
    </changeSet>
</databaseChangeLog>
